{
  "name": "@ntnyq/eslint-config",
  "type": "module",
  "version": "3.1.0",
  "packageManager": "pnpm@9.12.2",
  "description": "An opinionated ESLint config preset of ntnyq",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-flat-config",
    "ntnyq"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": "ntnyq/eslint-config",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run generate:type && tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "generate:site": "tsx scripts/generateSite.ts",
    "generate:type": "tsx scripts/generateType.ts",
    "lint": "eslint --flag unstable_ts_config .",
    "prepare": "husky",
    "release": "run-s release:check release:version",
    "release:check": "run-s clean build lint typecheck",
    "release:version": "bumpp && npm publish",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
    "@eslint/js": "^9.13.0",
    "@eslint/markdown": "^6.2.1",
    "@types/eslint__js": "^8.42.3",
    "@unocss/eslint-plugin": "^0.63.4",
    "@vitest/eslint-plugin": "^1.1.7",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-merge-processors": "^0.1.0",
    "eslint-plugin-antfu": "^2.7.0",
    "eslint-plugin-command": "^0.2.6",
    "eslint-plugin-import-x": "^4.3.1",
    "eslint-plugin-jsdoc": "^50.4.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-ntnyq": "^0.5.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-toml": "^0.11.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^9.29.1",
    "eslint-plugin-yml": "^1.14.0",
    "globals": "^15.11.0",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "^0.5.0",
    "prettier": "^3.3.3",
    "toml-eslint-parser": "^0.10.0",
    "typescript-eslint": "^8.10.0",
    "vue-eslint-parser": "^9.4.3",
    "yaml-eslint-parser": "^1.2.3"
  },
  "devDependencies": {
    "@ntnyq/prettier-config": "^1.21.3",
    "@types/node": "^22.7.7",
    "bumpp": "^9.7.1",
    "eslint": "^9.13.0",
    "eslint-typegen": "^0.3.2",
    "husky": "^9.1.6",
    "jiti": "^2.3.3",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.4",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "zx": "^8.1.9"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,jsonc,md,yaml,yml}": "eslint --flag unstable_ts_config --fix"
  }
}
